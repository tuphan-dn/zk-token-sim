{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "esnext"]
  },
  "include": ["index.ts", "lib"],
  "exclude": ["node_modules", "test"],
  "typedocOptions": {
    "entryPoints": ["./index.ts"],
    "out": "docs"
  }
}
